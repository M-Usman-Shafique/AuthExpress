<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="w-full min-h-screen bg-zinc-900 text-white p-8">
    <div class="flex flex-wrap gap-3">
    <% if (posts && posts.length > 0) { %> <% posts.forEach(post => { %>
    <div
      class="flex flex-col gap-4 w-60 justify-center bg-neutral-800 rounded-lg p-4 mb-4"
    >
      <div class="w-52 h-auto">
        <img
          src="<%= post.image %>"
          alt="<%= post.title %>"
          class="rounded-md"
        />
      </div>
      <div>
        <h1 class="text-xl font-bold"><%= post.title %></h1>
        <p class="text-sm"><%= post.description %></p>
      </div>
    </div>
    <% }) %> <% } else { %>
    <p>No posts available</p>
    <% } %>
    </div>
    <div>
      <a class="bg-neutral-800 px-2 py-3 rounded-lg" href="/post">Create New Post</a>
      <a class="bg-neutral-800 px-2 py-3 rounded-lg" href="/profile">Go to Profile</a>
    </div>
  </body>
</html>
